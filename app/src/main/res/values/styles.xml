    <style name="boldText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="italicText">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="normalText">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="BrowserTextMenuItem" parent="@style/Widget.AppCompat.ActionButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">left</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingLeft">12dp</item>
    </style>

    <style name="AnimationMenu">
        <item name="android:windowEnterAnimation">@anim/menu_open</item>
        <item name="android:windowExitAnimation">@anim/menu_close</item>
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">?attr/colorPrimaryVariant</item>
        <item name="colorPrimary">?attr/colorSecondary</item>
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog.Dark" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">?attr/colorSurface</item>
        <item name="colorPrimary">?attr/colorSecondary</item>
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog.Black" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">?attr/colorSurface</item>
        <item name="colorPrimary">?attr/colorSecondary</item>
    </style>

    <style name="MaterialSnackbarTheme" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="actionTextColorAlpha">1</item>
    </style>

    <style name="MaterialSnackbarTheme.Dark" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="backgroundTint">?attr/colorSurface</item>
        <item name="actionTextColorAlpha">1</item>
    </style>

    <style name="MaterialSnackbarTextViewTheme.Dark" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MaterialSnackbarTextButtonTheme" parent="@style/Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="MaterialSnackbarTextButtonTheme.Dark" parent="@style/Widget.MaterialComponents.Button.TextButton.Snackbar">
