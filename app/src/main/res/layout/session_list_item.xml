<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/layout_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/material_grid_touch_large"
        android:animateLayoutChanges="true"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="false"
        android:descendantFocusability="beforeDescendants"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="?attr/selectableItemBackground">


        <TextView
            android:id="@+id/text_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/material_grid_margin"
            android:layout_marginRight="@dimen/material_grid_margin"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:minHeight="?android:attr/listPreferredItemHeightSmall"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceListItemSmall" />

        <!-- Needed to push following views to the right end side -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/text_tab_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginLeft="@dimen/material_grid_margin"
            android:layout_marginRight="@dimen/material_grid_margin"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:minHeight="?android:attr/listPreferredItemHeightSmall"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceListItemSmall" />

        <ImageButton
            android:id="@+id/button_edit"
            style="?android:attr/actionButtonStyle"
            android:contentDescription="@string/action_edit_sessions"
            android:layout_width="@dimen/material_grid_touch_large"
            android:layout_height="match_parent"
            android:scaleType="center"
            app:srcCompat="@drawable/ic_edit"
            />

        <ImageButton
            android:id="@+id/button_delete"
            style="?android:attr/actionButtonStyle"
            android:layout_width="@dimen/material_grid_touch_large"
            android:layout_height="match_parent"
            android:contentDescription="@string/action_delete"
            android:scaleType="center"
            app:srcCompat="@drawable/ic_delete_forever"
            />

    </LinearLayout>

</layout>
